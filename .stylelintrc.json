{
   "extends": "stylelint-config-standard-scss",
   "ignoreFiles":[
    "**/_normalize.scss"
   ],
   "rules":{
     "media-feature-range-notation": [
       "never",
       {
         "ignoreRange": true
       }
     ],
    "selector-class-pattern": [
      "^[a-z0-9]+((_{2}|-)[a-z0-9]+)*$",
      {
        "message": "Class selectors should be written in kebab-case or BEM-style with double underscores."
      }
    ],
    "color-function-notation": null
   }
 }
